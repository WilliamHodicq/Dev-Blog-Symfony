{% extends 'base.html.twig' %}

{% block title article.title %}


{% block body %}
    <div class="main-container">
        <div class="container">
            <h1>{{ article.title }}</h1>

            <div class="row my-5">
                <div class="card text-center px-0">
                    <div class="card-header">
                        {% if article.filename %}
                            <img src="{{ vich_uploader_asset(article,'imageFile')  }}" alt="" class="card-img-top img-card">
                        {% endif %}

                    </div>
                    <div class="card-body ">
                        <p class="card-text">{{ article.description  | raw | nl2br }}</p>
                        <a href="{{ path('app_articles_index') }}" class="btn btn-primary">Return</a>
                    </div>
                    <div class="my-2">
                        {% for tag in article.tags%}
                            <span class="badge bg-success bg-gradient"><a href="{{ path('app_articles_index_tags',{id:tag.id}) }}" class="text-decoration-none text-white p-2">{{ tag.name }}</a></span>
                        {% endfor %}
                    </div>
                    <div class="card-footer text-white">
                        {{ article.formattedDate  }}
                    </div>
                </div>
            </div>

        </div>
        <div class="d-flex justify-content-center">
            <div class="planet"><div class="moon"></div></div>
        </div>
    </div>


{% endblock %}